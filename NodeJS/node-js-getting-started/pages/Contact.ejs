    <input type="text" class="form-control" placeholder="Name"  name="Name" id="username" required>
    <input type="text" class="form-control" placeholder="Email"  name="Email" id="email" required>
    <input type="text" class="form-control" placeholder="Subject" name="Subject"  id="subject" required>
    <textarea name="Message" class="form-control"  cols="30" rows="10"  id="message" required></textarea>
