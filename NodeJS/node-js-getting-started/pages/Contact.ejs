    <title>Contact</title>
    <script>

        window.onload=function() {


            function sendData() {
                var xhr = new XMLHttpRequest();
                xhr.open('POST', 'send');
                var item = {
                    name: document.getElementById('username').value,
                    email: document.getElementById('email').value,
                    subject: document.getElementById('subject').value,
                    message: document.getElementById('message').value,
                };
                var data = JSON.stringify(item);
                xhr.setRequestHeader('Content-Type', 'application/json');
                xhr.send(data);
                xhr.onload = function () {
                    location.href = '/home';
                }
            }

            var inputList = document.getElementById("contactform").querySelectorAll("input"),
                form = document.getElementById("contactform"),
                textarea = document.getElementById("contactform").querySelectorAll("textarea")[0],
                message, name, email, subject;
            validate = function () {

                if (name && email && subject && message) {
                    alert("Thank you");
                    sendData();
                } else {
                    alert("Please enter correct data");
                }
            }
            textarea.oninput = function () {
                if (this.value.match(/^.{20,}$/)) {
                    message = true;
                    this.style.border = "2px solid green";
                } else {
                    message = false;
                    this.style.border = "2px solid red";
                }
            }
            for (var i = 0; i < inputList.length; i++) {
                inputList[i].oninput = function () {
                    if (this.name == "Name") {
                        name = true;
                        if (this.value.match(/^[a-zA-Zs]+$/)) {
                            this.style.border = "2px solid green";
                        } else {
                            name = false;
                            this.style.border = "2px solid red";
                        }
                    }
                    if (this.name == "Email") {
                        if (this.value.match(/^(([^<>()\[\]\\.,;:\s@"]+(\.[^<>()\[\]\\.,;:\s@"]+)*)|(".+"))@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/)) {
                            email = true;
                            this.style.border = "2px solid green";
                        } else {
                            email = false;
                            this.style.border = "2px solid red";
                        }
                    }
                    if (this.name == "Subject") {
                        if (this.value.match(/^[a-zA-Zs]+$/)) {
                            subject = true;
                            this.style.border = "2px solid green";
                        } else {
                            subject = false;
                            this.style.border = "2px solid red";
                        }
                    }
                }
            }
        }
    </script>

